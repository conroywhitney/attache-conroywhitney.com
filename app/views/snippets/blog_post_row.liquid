<div class="sixteen wide left aligned column">
  <div class="ui piled segment">
    <div class="ui ribbon label">
      {{ blog_post.published_on | date: "%Y-%m-%d" }}
    </div><!-- /ribbon -->

    <div class="content">
      {% if blog_post.image.url %}
        <img class="ui small left floated image" src="{{ blog_post.image.url }}">
          {% else %}
        <img class="ui small left floated image" src="{{ 'wireframe/square-image.png' | theme_image_url }}">
      {% endif %}

      <h3 class="ui header">
        <a href="{% path_to blog_post %}">
          {{ blog_post.title }}
        </a>
      </h3>

      <p>{{ blog_post.description }}</p>

      <a class="ui primary button" href="{% path_to blog_post %}">
        Read more
        <i class="icon long right arrow"></i>
      </a>
    </div>

  </div>
</div>
