        {% include 'blog_posts_segment' %}
      {% endwith_scope %}
    </div><!-- /grid -->
  </div><!-- /segment -->
  <div class="ui stackable vertical segment">
    <div class="ui center aligned page grid">
      {% include 'section_header_with_divider_icon' with icon: 'student', text: "Experience" %}
      {% with_scope skills: skill._slug %}
        {% include 'experience_segment' %}
      {% endwith_scope %}
    </div><!-- /grid -->
  </div><!-- /segment -->
{% endblock %}